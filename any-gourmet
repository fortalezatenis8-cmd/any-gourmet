        </main>

    <footer class="bg-[#1a1a1a] text-white py-20 px-6 text-center">
        <h2 class="text-3xl mb-10 italic">A doçura em cada detalhe</h2>
        <div class="flex flex-wrap justify-center gap-6">
            <a href="https://api.whatsapp.com/send/?phone=5585992000433" class="flex items-center gap-2 border border-white/20 px-10 py-4 hover:bg-gold transition uppercase text-xs tracking-widest">
                <i data-lucide="message-circle" class="w-4 h-4"></i> WhatsApp
            </a>
            <a href="https://www.instagram.com/anygourmet_" class="flex items-center gap-2 border border-white/20 px-10 py-4 hover:bg-white hover:text-black transition uppercase text-xs tracking-widest">
                <i data-lucide="instagram" class="w-4 h-4"></i> Instagram
            </a>
        </div>
        <p class="mt-16 text-[10px] text-stone-500 uppercase tracking-widest">Aviso: Contém lactose. Pode conter glúten, amendoim ou corantes.</p>
    </footer>

    <div id="adminPanel" class="admin-modal fixed inset-0 z-50 flex items-center justify-center p-4">
        <div class="bg-white w-full max-w-4xl max-h-[90vh] overflow-y-auto p-8 rounded-lg shadow-2xl">
            <div class="flex justify-between items-center mb-8">
                <h2 class="text-2xl font-bold uppercase tracking-widest text-chocolate">Painel Administrativo</h2>
                <button onclick="closeAdmin()" class="text-red-500 font-bold">FECHAR [X]</button>
            </div>
            
            <div id="loginForm" class="text-center py-20">
                <input type="text" id="userInput" placeholder="Usuário" class="block mx-auto mb-4 p-3 border w-64 rounded">
                <input type="password" id="passInput" placeholder="Senha" class="block mx-auto mb-6 p-3 border w-64 rounded">
                <button onclick="handleLogin()" class="bg-chocolate text-white px-10 py-3 rounded uppercase tracking-widest text-sm">Entrar</button>
            </div>

            <div id="adminEditor" class="hidden grid grid-cols-1 gap-6">
                </div>
        </div>
    </div>

    <script>
        // Dados Iniciais (Database)
        let doces = JSON.parse(localStorage.getItem('anyGourmetDB')) || {
            tradicional: [
                { nome: 'Brigadeiro Belga', desc: 'Chocolate ao leite premium, leite condensado e manteiga sem sal.', preco: '1,80', img: 'https://images.unsplash.com/photo-1599599810769-bcde5a160d32?q=80&w=800' },
                { nome: 'Ninho', desc: 'Leite Ninho em pó, creme de leite e textura delicada.', preco: '1,80', img: 'https://images.unsplash.com/photo-1548943487-a2e4b43b4853?q=80&w=800' }
            ],
            especial: [
                { nome: 'Red Velvet', desc: 'Chocolate branco, baunilha e coloração natural vermelha.', preco: '1,90', img: 'https://images.unsplash.com/photo-1586788680434-30d3246718d0?q=80&w=800' }
            ],
            premium: [
                { nome: 'Ferrero', desc: 'Chocolate, Nutella e avelã torrada crocante.', preco: '2,00', img: 'https://images.unsplash.com/photo-1549007994-cb92caebd54b?q=80&w=800' }
            ]
        };

        function renderSite() {
            const app = document.getElementById('app');
            app.innerHTML = '';
            
            for (const categoria in doces) {
                let html = `
                    <section id="${categoria}" class="mb-32">
                        <h2 class="text-4xl md:text-5xl text-center mb-16 uppercase tracking-widest">${categoria}</h2>
                        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-12">
                            ${doces[categoria].map((doce, idx) => `
                                <div class="group">
                                    <div class="overflow-hidden rounded-sm mb-4 aspect-square bg-stone-100">
                                        <img src="${doce.img}" class="w-full h-full object-cover group-hover:scale-110 transition duration-700">
                                    </div>
                                    <h3 class="text-xl font-bold mb-2">${doce.nome}</h3>
                                    <p class="text-xs text-stone-500 leading-relaxed mb-4">${doce.desc}</p>
                                    <p class="text-gold font-bold">R$ ${doce.preco} /un</p>
                                </div>
                            `).join('')}
                        </div>
                    </section>
                `;
                app.innerHTML += html;
            }
            lucide.createIcons();
        }

        // Funções Admin
        function openAdmin() { document.getElementById('adminPanel').style.display = 'flex'; }
        function closeAdmin() { document.getElementById('adminPanel').style.display = 'none'; }
        
        function handleLogin() {
            const user = document.getElementById('userInput').value;
            const pass = document.getElementById('passInput').value;
            if (user === '@Gourmet2026' && pass === '@Andjr2026') {
                document.getElementById('loginForm').classList.add('hidden');
                document.getElementById('adminEditor').classList.remove('hidden');
                loadEditor();
            } else { alert('Acesso Negado'); }
        }

        function loadEditor() {
            const editor = document.getElementById('adminEditor');
            editor.innerHTML = '<p class="text-stone-400 italic mb-4 text-center">Cole novas URLs de imagens ou mude os preços abaixo e clique em Salvar.</p>';
            
            for (const cat in doces) {
                doces[cat].forEach((doce, idx) => {
                    editor.innerHTML += `
                        <div class="p-4 border border-stone-100 bg-stone-50 flex flex-col gap-2 rounded">
                            <span class="text-[10px] font-bold uppercase">${cat}</span>
                            <input type="text" value="${doce.nome}" onchange="updateData('${cat}', ${idx}, 'nome', this.value)" class="p-2 border font-bold">
                            <input type="text" value="${doce.img}" onchange="updateData('${cat}', ${idx}, 'img', this.value)" placeholder="URL da Imagem" class="p-2 border text-xs italic">
                            <input type="text" value="${doce.preco}" onchange="updateData('${cat}', ${idx}, 'preco', this.value)" class="p-2 border w-24">
                        </div>
                    `;
                });
            }
            editor.innerHTML += `<button onclick="saveAll()" class="bg-green-600 text-white p-4 font-bold rounded mt-6">SALVAR TODAS AS ALTERAÇÕES</button>`;
        }

        function updateData(cat, idx, field, val) { doces[cat][idx][field] = val; }

        function saveAll() {
            localStorage.setItem('anyGourmetDB', JSON.stringify(doces));
            alert('Dados atualizados com sucesso!');
            renderSite();
            closeAdmin();
        }

        renderSite();
    </script>
</body>
