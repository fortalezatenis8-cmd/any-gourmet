        .hero-bg { background: linear-gradient(rgba(0,0,0,0.4), rgba(0,0,0,0.4)), url('https://images.unsplash.com/photo-1582176604856-e824b473652a?q=80&w=1920'); background-size: cover; background-position: center; }
        .admin-modal { display: none; backdrop-filter: blur(10px); background: rgba(0,0,0,0.8); }
